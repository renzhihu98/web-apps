<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <%= link_to "StudyBreak", home_path, class:"navbar-brand" %>

  <%= search_form_for @q, url: search_page_path, html: { method: :post } do |f| %>
    <div>
      <%= f.search_field :title_cont%>
      <%= f.submit "Search", :class => "button btn btn-primary" %>
    </div>
  <% end %>
  <ul class="nav navbar-nav">
    <li><%= link_to "Advanced Search", search_page_path, class:"nav-link" %></li>
    <li><%= link_to "All Books", books_path, class:"nav-link" %></li>
  </ul>

  <div class="navbar-collapse collapse">
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'My Account',  user_profile_path, class:"nav-link, active"%>
        </li>
      <% else %>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown">Account</a>
        <div class="dropdown-menu">
          <%= link_to 'Log in', new_user_session_path, class:"dropdown-item"%>
          <%= link_to 'Sign up', new_user_registration_path, class:"dropdown-item" %>
        </div>
      </li>
      <%end %>
    </ul>
  </div>

</nav>