<% provide(:title, "My Comments |") %>


<div class="row py-3">
  <%= render 'sidebar' %>
  <div class="col" id="main">
    <h1>My Comments</h1>

    <table class="table table-striped table-hover">
      <thead class="thead">
      <tr class="text-center">
        <th scope="col">Your Comment</th>
        <th colspan="1">Action</th>
      </tr>
      </thead>
      <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.body %></td>
          <td><%= link_to 'Edit', edit_book_comment_path(comment.book_id, comment) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>